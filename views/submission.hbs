<h1>{{company.companyName}}</h1>
<figure class="avatar avatar">
    <img src={{company.logoUrl}} />
</figure>
​
​
<h4>Invoice Submission</h4>
<form action="/{{company.url}}/submission" method="POST" enctype="multipart/form-data">
    
    <label for="name">Name</label>  
    <input type="text" required name="contractorName">
    
    <label for="email">Email</label>  
    <input type="email" required name="email">
    
    <label for="cellphone">Cellphone</label>  
    <input type="text" required name="cellphone">
    
    <label for="iban">IBAN</label>  
    <input type="text" required pattern="^([A-Z]{2})( ?\d{1,4})+$" name="iban">
    <p class="hint" id="iban-hint"></p>
    
    <label for="jobDescription">Job Description</label>  
    <input type="text" required name="jobDescription">
    
    <label for="hiredByPerson">Person of Contact</label>  
    <input type="text" required name="hiredByPerson">
    
    <label for="amountDue">Amount Due (no Taxes added or subtracted)</label>  
    <input id="amountDue" type="number" required name="amountDue">
    
    <label for="dateOfCompletion">Date of Completion</label>  
    <input type="date" name="dateOfCompletion">
    
   <label for="vat">VAT</label>
    <select name="vat" id="vat">
       
        <option value="Does not Charge Vat">Does not charge VAT</option>
        <option value="23">23%</option>
        <option value="10">10%</option>
      
    </select>
    <br>
​
    <label for="irs">IRS</label>
    <select name="irs" id="irs">
       
        <option value="Does not Charge IRS">Does not charge IRS</option>
        <option value="25">25%</option>
        <option value="10">10%</option>
      
    </select>
    <br>
   <label for="amountToTransfer">Amount to be transfered</label>
 <input type="number" id="amountToTransfer" name="amountToTransfer" disabled>
  
​
    <label for="comment">Extra Comments</label>
    <input type="text" name="comment">
​
    <label for="pdf">Add your Invoice below</label>
    <input type="file" name="pdf">
    <button id="submit" disabled>Submit</button>
</form>

<script src="/scripts/inputvalidation.js"></script>



