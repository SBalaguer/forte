<h1>{{companyData.companyName}}</h1>
<img src={{companyData.logoUrl}} width="200px" alt="logo"/>
<h4>Invoice Submission</h4>
<form action="/{{company.url}}/submission/{{invoice._id}}/edit" method="POST" enctype="multipart/form-data">
    <label for="name">Name</label>  
    <input type="text" name="contractorName" value='{{invoice.contractorName}}'>
    
    <label for="email">Email</label>  
    <input type="email" name="email" value='{{invoice.email}}'>
    
    <label for="cellphone">Cellphone</label>  
    <input type="text" name="cellphone" value='{{invoice.cellphone}}'>
    
    <label for="iban">IBAN</label>  
    <input type="text" name="iban" value='{{invoice.iban}}'>
    
    <label for="jobDescription">Job Description</label>  
    <input type="text" name="jobDescription" value='{{invoice.jobDescription}}'>
    
    <label for="hiredByPerson">Person of Contact</label>  
    <input type="text" name="hiredByPerson" value='{{invoice.hiredByPerson}}'>
    
    <label for="amountDue">Amount Due</label>  
    <input type="number" name="amountDue" value='{{invoice.amountDue}}'>
    
    <label for="dateOfCompletion">Date of Completion</label>  
    <input type="date" name="dateOfCompletion" value='{{invoice.dateOfCompletion}}'>
    
    <label for="chargeVat">Do you charge VAT?</label>
    <input type="radio" name="chargeVat" value="true">Yes
    <input type="radio" name="chargeVat" value="false">No
    <br>
    
    <label for="retainIrs">Do you retain IRS?</label>
    <input type="radio" name="retainIrs" value="true">Yes
    <input type="radio" name="retainIrs" value="false">No<br>

    <label for="comment">Extra Comments</label>
    <input type="text" name="comment" value='{{invoice.comment}}'>

    <label for="pdf">Add your Invoice below</label>
    <input type="file" name="pdf">
    <button>Submit</button>
</form>




